                                            <li><a asp-controller="Pages" asp-action="Staff">Nhân viên</a></li>
                                            <li><a asp-controller="Pages" asp-action="FAQ">Faq</a></li>
                                            <li><a asp-controller="Pages" asp-action="Story">Câu chuyện</a></li>
                                            <li><a asp-controller="Pages" asp-action="Gallery">Trưng bày</a></li>
                                        </ul>
                                    </li>
                                    <li><a asp-controller="Home" asp-action="Contact">Liên hệ</a></li>
                                </ul>
                            </nav>
                        </div>
                        <div class="wrapper wrapper__2 pl-50 d-flex justify-content-end align-items-center">
                            <div class="search">
