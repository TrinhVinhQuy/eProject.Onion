@model LoginModel
@{
    ViewData["Title"] = "Đăng nhập";
    // Layout = "~/Views/Shared/_Layout.cshtml";
}
@* Add file css *@
@section Styles {
    <style>
        .login-form {
            margin-left: auto;
            margin-right: auto;
            max-width: 400px;
            width: 100%;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .google-btn, .facebook-btn {
            /*background-color: #DB4437;*/
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            text-align: center;
            font-size: 16px;
            cursor: pointer;
            margin-top: 15px;
            text-decoration: none;
        }

        .google-btn {
            background-color: #DB4437;
        }

            .google-btn:hover {
                background-color: #c1351d;
                color: white;
            }

        .facebook-btn {
            background-color: #3837db;
        }

            .facebook-btn:hover {
                background-color: #2120ad;
                color: white;
            }

    </style>
}
@if (ViewBag.ReturnUrl != null)
{
    <p class="text-center mt-10 mb-10 text-danger">@ViewBag.ReturnUrl</p>
}
<form asp-controller="Login" asp-action="Index" method="post">
    <div class="m-auto">
        <div class="login-form">
            @if (ViewData["ErrorMessage"] != null)
            {
                <p class="text-center mt-10 mb-10 text-danger">@ViewData["ErrorMessage"]</p>
            }
            <h2 class="text-center mb-4">Đăng nhập</h2>
            <div class="mb-3">
                <label asp-for="Username" class="form-label">Tên đăng nhập</label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label">Mật khẩu</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
                <div class="d-flex justify-content-between">
                    <a href="/Account" style="text-decoration:none; color:black">Quên mật khẩu</a>
                    <a href="/register" style="text-decoration:none; color:black">Đăng kí</a>
                </div>
            </div>
            <center>
                <button type="submit" class="site-btn">Đăng nhập</button>
                <br />
                <span>Hoặc</span>
            </center>
            <div class="d-flex justify-content-between">
                <a asp-controller="Login" asp-action="GoogleLogin" class="google-btn" style="width: 125px"><i class="fab fa-google"></i> Google</a>
                <button type="button" class="facebook-btn"><i class="fab fa-facebook-f"></i> Facebook</button>
            </div>
        </div>
    </div>
    <br />
</form>



